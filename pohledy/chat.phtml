<div class="chat-container">
    <h1>Chatovací místnost</h1>

    <?php if (!empty($uzivatele)): ?>
        <div class="users-list">
            <h2>Uživatelé</h2>
            <ul>
                <?php foreach ($uzivatele as $uzivatel): ?>
                    <li>
                        <a href="?prijemce_id=<?= htmlspecialchars($uzivatel['id']) ?>">
                            <?= htmlspecialchars($uzivatel['userName']) ?>
                        </a>
                    </li>
                <?php endforeach; ?>
            </ul>
        </div>
    <?php endif; ?>

