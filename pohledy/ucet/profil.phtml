<div class="container">
    <!-- Hlavní profilová část -->
    <div class="profile-header">
        <img src="obrazky/default-profile.png" alt="Profilová fotka" class="profile-picture">
        <div class="profile-info">
            <h1><?= htmlspecialchars($uzivatel['userName'] ?? 'Uživatel') ?></h1>
            <p><?= htmlspecialchars($uzivatel['bio'] ?? 'Zatím žádné informace.') ?></p>
        </div>
    </div>

    <!-- Počet sledujících a sleduji -->
    <div class="profile-stats">
        <div>
            <span>0</span>
            Sledujících
        </div>
        <div>
            <span>0</span>
            Sleduje
        </div>
    </div>

    <!-- Změna profilovky -->
    <div class="profile-upload">
        <label for="profilovka">Profilová fotka</label>
        <input type="file" id="profilovka" name="profilovka">
        <button class="save-button">Změnit</button>
    </div>

    <!-- Možnost editace popisu -->
    <div class="profile-bio">
        <textarea name="bio" placeholder="Napište něco o sobě..."></textarea>
        <button class="save-button">Uložit</button>
    </div>

    <!-- Navigace mezi příspěvky a uloženými -->
    <div class="profile-nav">
        <a href="#">Příspěvky</a>
        <a href="#">Uložené</a>
    </div>

    <!-- Příspěvky uživatele -->
    <div class="posts-container">
        <div class="post-item"></div>
        <div class="post-item"></div>
        <div class="post-item"></div>
        <div class="post-item"></div>
    </div>
</div>
