<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vytvořit nový příspěvek</title>
    <link rel="stylesheet" href="styles/vytvoritPrispevekStyles.css">
</head>
<body>
    <div class="container">
        <h1>Vytvořit nový příspěvek</h1>

        <!-- Zobrazení zpráv -->
        <?php if (isset($zpravy) && is_array($zpravy) && !empty($zpravy)): ?>
            <div class="zpravy">
                <?php foreach ($zpravy as $zprava): ?>
                    <p class="<?= htmlspecialchars($zprava['typ'] === 'chyba' ? 'chyba' : 'uspech') ?>">
                        <?= htmlspecialchars($zprava['text']) ?>
                    </p>
                <?php endforeach; ?>
            </div>
        <?php endif; ?>

        <!-- Formulář -->
        <form method="post" enctype="multipart/form-data">
            <div class="formular-polozka">
                <label for="obsah">Obsah příspěvku:</label>
                <textarea id="obsah" name="obsah" placeholder="Napište příspěvek..." required></textarea>
            </div>
            <div class="formular-polozka">
                <label for="typ">Typ příspěvku:</label>
                <select id="typ" name="typ" required>
                    <option value="">Vyberte typ...</option>
                    <option value="cviceni">Cvičení</option>
                    <option value="jidlo">Jídlo</option>
                </select>
            </div>
            <div class="formular-polozka">
                <label for="soubor">Nahrajte obrázek nebo video:</label>
                <input type="file" id="soubor" name="soubor" accept="image/*,video/*">
            </div>
            <button type="submit">Přidat příspěvek</button>
        </form>
    </div>
</body>
</html>
